{
    "name": "uddoktapay/uddoktapay-gateway",
    "description": "Accept payments via bKash, Rocket, Nagad, Upay and International methods through UddoktaPay",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "UddoktaPay Team",
            "email": "info@uddoktapay.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "UddoktaPay\\UddoktaPayGateway\\": "src/"
        }
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "pot": "wp i18n make-pot . languages/uddoktapay-gateway.pot",
        "build": [
            "composer pot",
            "composer install --no-dev --prefer-dist --optimize-autoloader --no-interaction"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable"
}
